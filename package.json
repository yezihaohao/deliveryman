{
    "name": "deliveryman",
    "version": "1.0.0",
    "description": "simple tool for messages between iframes and main page",
    "main": "./lib/index.cjs.js",
    "module": "./lib/index.esm.js",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/yezihaohao/deliveryman.git"
    },
    "homepage": "https://github.com/yezihaohao/deliveryman#readme",
    "keywords": [
        "micro",
        "micro frontend",
        "postmessage",
        "tool",
        "message"
    ],
    "scripts": {
        "test": "jest",
        "build": "rollup -c",
        "dev": "rollup -c -w",
        "commit": "git-cz",
        "release": "standard-version"
    },
    "config": {
        "commitizen": {
            "path": "node_modules/cz-conventional-changelog"
        }
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -e $GIT_PARAMS"
        }
    },
    "author": "yezihaohao",
    "license": "MIT",
    "files": [
        "lib"
    ],
    "typings": "./lib/index.d.ts",
    "devDependencies": {
        "@commitlint/cli": "^8.1.0",
        "@commitlint/config-conventional": "^8.1.0",
        "commitizen": "^4.0.3",
        "cz-conventional-changelog": "^3.0.2",
        "husky": "^3.0.5",
        "jest": "^24.9.0",
        "rollup": "^1.21.2",
        "rollup-plugin-node-resolve": "^5.2.0",
        "rollup-plugin-typescript2": "^0.24.1",
        "standard-version": "^7.0.0",
        "ts-node": "^8.3.0",
        "typescript": "^3.6.3"
    }
